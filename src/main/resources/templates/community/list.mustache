{{>header}}

<div style="max-width: 800px; margin: 40px auto; font-family: sans-serif;">
    <h2 style="text-align: center;">📢 커뮤니티 게시판</h2>

    <div style="text-align: right; margin-bottom: 20px;">
        <a href="/community/new" style="background: #3498db; color: white; padding: 8px 16px; border-radius: 6px; text-decoration: none;">
            ✍ 게시글 작성
        </a>
    </div>

    {{#posts}}
        <div style="background: #f9f9f9; padding: 15px; border-radius: 8px; margin-bottom: 15px;">
            <h3 style="margin: 0;"><a href="/community/{{id}}" style="color: #2980b9; text-decoration: none;">{{title}}</a></h3>
            <p style="margin: 5px 0 0; color: #555;">작성자: {{author}} | 작성일: {{createdAt}}</p>
        </div>
    {{/posts}}

    {{^posts}}
        <p style="text-align: center; color: #999;">아직 게시글이 없습니다.</p>
    {{/posts}}
</div>

{{>footer}}
