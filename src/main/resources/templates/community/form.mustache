{{>header}}

<div style="max-width: 700px; margin: 40px auto; font-family: sans-serif;">
    <h2 style="text-align: center;">✍ 게시글 작성</h2>

    <form action="/community/new" method="post" style="display: flex; flex-direction: column; gap: 15px; margin-top: 20px;">
        <input type="text" name="title" placeholder="제목을 입력하세요" required
               style="padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">

        <textarea name="content" placeholder="내용을 입력하세요" rows="8" required
                  style="padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;"></textarea>

        <!-- 작성자 입력 필드 제거됨 -->

        <button type="submit"
                style="padding: 12px; background-color: #3498db; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">
            등록하기
        </button>
    </form>
</div>

{{>footer}}
