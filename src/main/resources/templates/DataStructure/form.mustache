{{>header}}

<div style="max-width: 700px; margin: 40px auto; font-family: sans-serif;">
    <h2 style="text-align: center;">🛠 {{title}}</h2>

    <form action="{{formAction}}" method="post"
          style="display: flex; flex-direction: column; gap: 15px; margin-top: 20px;">
        {{#csrfToken}}
            <input type="hidden" name="{{csrfParameterName}}" value="{{csrfToken}}">
        {{/csrfToken}}

        <input type="text" name="title" placeholder="단원 제목" value="{{titleValue}}" required
               style="padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">

        <textarea name="content" placeholder="단원 내용을 입력하세요" rows="10" required
                  style="padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">{{contentValue}}</textarea>

        <button type="submit"
                style="padding: 12px; background-color: #2ecc71; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">
            저장
        </button>
    </form>

    <div style="margin-top: 20px; text-align: center;">
        <a href="/subjects/datastructure" style="text-decoration: none; color: #2980b9;">← 목록으로 돌아가기</a>
    </div>
</div>

{{>footer}}
